darkest = #333
darker = #0593dc
primary = #00A6FC
lighter = #eee
lightest =#dfdfdf
white= #fff

/* -----------------------------------------
Visiblity
----------------------------------------- */

.viewport
  position: relative
  
  > *:not(.active)
    display: none
    
/* -----------------------------------------
Typography
----------------------------------------- */    

body, html
  margin: 0;
  padding: 0;
  width: 100%
  height: 100%
  overflow: hidden
  -webkit-user-select:none

  .app_body
    height: 100%

  .pedidos
    height: 100%

/* -----------------------------------------
Typography
----------------------------------------- */

h1, h2, h3, h4, h5, h6 {
font-family: "Proxima", "Helvetica Neue", "Helvetica", Arial, sans-serif; font-weight: normal; }

h3 { margin-bottom: 0; color: darker;}

h4 {font-size: 24px;font-size: 2.4rem; color: darkest}

h5 {font-size: 18px;font-size: 1.8rem; color: darker;}

h6 {font-size: 15px;font-size: 1.5rem;line-height: 1; }

p {line-height: 20px;font-size: 13px;font-size: 1.3rem; }

.row {max-width: 1400px; min-width: 320px; }

strong {font-weight: 600; }

a {color: darkest; }

a:hover {color: darker; }

/* -----------------------------------------
Lightbox
----------------------------------------- */
.reveal-modal
  visibility: visible


/* -----------------------------------------
Bar
----------------------------------------- */
#header
  background-color: #333
  padding: 5px 0px
  margin-bottom: 5px
  border-bottom: 6px solid primary
  .logo
    h1
      font-size: 22px
      color: white
      margin: 5px 8px
  .other
      a
        padding: 6px 15px
        margin-right: 15px
        margin-top: 4px

/* -----------------------------------------
Infobar
----------------------------------------- */
.infobar
  height: 100%
  margin-top: 30px
  
  >div
    margin-right: 20px
    
    .panel
      padding: 15px
    
    .frame
      padding: 15px
      margin-bottom: 20px
    
    dl.nice.tabs
      border: none
      margin: 0px
      max-height: 220px
      overflow-y: scroll
      dd
        cursor: pointer
        padding: 1px 2px
        &:hover
          background-color: lighter
    
    hr
      margin: 3px 8px 8px 0px
    h5
      color: primary
      font-size: 14px
    a.button
      margin: 5px 0px 5px 0px
      padding: 8px 20px
    

/* -----------------------------------------
Sidebar
----------------------------------------- */

@media only screen and (max-width: 900px)
  dl.nice.contained.tabs dd a
    padding: 7px 9px 9px


@media only screen and (max-width: 1020px)
  dl.nice.contained.tabs dd a
    padding: 7px 9px 9px
  .sidebar
    ul.contained.tabs-content
    .list
      .group
        .row
          span
            margin: 5px 4px 5px 5px
            display: inline-block
            &.small
              margin: 5px 0px 5px 0px
              font-size: 11px

.sidebar
  height: 100%
  ul.contained.tabs-content
    height: 100%
    li 
      padding: 1px
      height: 100%

  .search
    margin: 10px 0px 5px 0px
    text-align: center
    input
      margin-top: 6px
      
  .list
    height: 75%
    overflow-x: hidden
    overflow-y: scroll
    border-top: 2px solid lightest
    margin: 0px
    .group
      .header
        background-color: lighter
        font-weight: bold
      hr
        margin: 0px
        padding: 0px
        
      .row
        vertical-align: bottom
        &:nth-child(even)
          background-color: #f9f9f9
        span
          margin: 5px 0px 5px 5px
          display: inline-block
          &.small
            font-size: 12px


/* -----------------------------------------
Main
----------------------------------------- */
.main
  height: 90%
  overflow-y: scroll
  >*
    box-shadow: 0 2px 5px rgba(0,0,0,0.15)
    -webkit-box-shadow: 0 2px 5px rgba(0,0,0,0.15)
    -moz-box-shadow: 0 2px 5px rgba(0,0,0,0.25)
    -moz-border-radius: 3px
    -webkit-border-radius: 3px
    border-radius: 3px
    padding: 4px
    margin: 20px 0px
    position: relative;
    border: 2px solid primary
    
    .contado
      margin: 5px 0px
    
    &.active .hide_when_active
      display: none
    
    &:not(.active)
      border: 2px solid lighten(primary,70%)
      opacity: 0.6
      
      .show_when_active
        display: none
      
      .icon_button_bar a:hover
        color: red

    .icon_button_bar
      position: absolute;
      top: 8px;
      right: 5px;
      a
        font-size: 22px;
        line-height: .5;
        color: #aaa;
        text-shadow: 0 -1px 1px rbga(0,0,0,.6);
        font-weight: bold;
        cursor: pointer;
        &:hover
          color: primary    

      
    table
      width: 100%
      margin-bottom: 5px
      tr
        width: 100%
        td
          padding: 5px 9px
          text-align: center
          input
            width: 50px
            &.small
              width: 30px
          &:nth-child(2)
            text-align: left
            width: 60%

    .total_row
      margin-bottom: 10px
      .total
        text-align: right
        margin-top: 5px
      .option
        text-align: center
        
      
/* -----------------------------------------
Add-Ons
----------------------------------------- */

.tooltip { border-bottom: 1px dotted #333; position: relative; cursor: pointer; }  
.tooltip:hover:after {z-index: 100;content: attr(data-tooltip); position: absolute; white-space: nowrap; background: rgba(0, 0, 0, 0.85); padding: 3px 7px; color: #FFF; border-radius: 3px; -moz-border-radius: 3px; -webkit-border-radius: 3px; margin-left: 7px; margin-top: -3px; }


.lightbox
  .reveal-modal
    .alert-box
      display: none
    .show_on_error
      display: none
     &.error
      border: 2px solid red
      .show_on_error
        display: block
      .alert-box
        display: block


.frame
  border: 1px solid lighter
  padding: 20px
  
  
.tabs dd a 
  cursor: pointer


.gauge_canvas
  margin: 4px 5px 0px 0px
  border: 1px solid lightest
  position: relative
  .gauge_bar
    height: 10px
    margin: 2px
    background-color: primary
  &.with_labels
    margin: 4px 5px 20px 0px
    .gauge_bar
      height: 19px
    .title
      position: absolute
      top: 3px
      left: 20px
      color: #333
    .label_0
      position: absolute
      top: 24px
      left: 0px
    .label_1
      position: absolute
      top: 24px
      right: 0px
      
input.nice  { border: solid 1px #bbb; border-radius: 2px; -webkit-border-radius: 2px; -moz-border-radius: 2px; }
input.nice  { font-size: 13px; padding: 6px 3px 4px; outline: none !important; background: url(../images/misc/input-bg.png) #fff; }
input.nice:focus { background-color: #f9f9f9; }

